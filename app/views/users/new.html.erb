<body class="bg-dark">
  <div class="container py-5">
    <div class="row">
      <div class="col-md-12">
        <h2 class="text-center text-white mb-4">Webmail</h2>
        <div class="row">
          <div class="col-md-6 mx-auto">
            <span class="anchor" id="formLogin"></span>
            <div class="card rounded-0">
              <div class="card-header">
                <h3 class="mb-0">Create new account</h3>
              </div>
              <div class="card-body">
                <form class="form" role="form" autocomplete="off" id="formLogin">
                  <%= form_for @user, html: {class: "form-horizontal"} do |f| %>
                  <div class="form-group">
                    <%= f.label :name, "Your name", class: "control-label" %>
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :username, "Username", class: "control-label" %>
                    <%= f.text_field :username, class: "form-control", placeholder: "Enter your email" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password, "Password", class: "control-label" %>
                    <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password_confirmation, "Password Confirmation", class: "control-label" %>
                    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password confirmation" %>
                  </div>
                  <div class="text-center">
                    <%= f.submit "Register", class: "btn btn-success col-lg-12" %>
                  </div>
                  <div class="text-right">
                    <%= link_to "Login", login_path %>
                  </div>
                  <% end %>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
